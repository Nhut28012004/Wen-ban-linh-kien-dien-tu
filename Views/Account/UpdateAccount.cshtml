@model AppUserModel
@{
	ViewData["title"] = "Update Account Information";
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">


			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<h2>Update Account Information</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form autocomplete="off" asp-action="UpdateInformation" asp-controller="Account">
						<input type="hidden" asp-for="Id""/>
						<div class="form-group">
							<label>Username</label>
							<input asp-for="UserName" readonly class="form-control"> </input>
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" readonly class="form-control"> </input>
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label>Phone Number </label>
							<input asp-for="PhoneNumber" class="form-control"> </input>
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label>New password </label>
							<input type="text" name="PasswordHash" class="form-control"> </input>
							<span asp-validation-for="PasswordHash" class="text-danger"></span>
						</div>

						<button type="submit" class="btn btn-default">Update Account</button>
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
